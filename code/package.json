{
    "name": "project_xiyou",
    "description": "a ts-react template for dota2 modding, together with some helper scripts",
    "license": "MIT",
    "repository": "https://github.com/XavierCHN/x-template",
    "dota_developer": {
        "main_lang": "SChinese",
        "publish_options": {
            "excludeFiles": [
                "**/*.ts",
                "**/*.bin",
                "**/*.py",
                "**/*.json",
                "**/*.cfg",
                "**/txt_itemname.txt",
                "**/dota2_old_npc_abilities.txt",
                "**/dota2_enum_note.txt",
                "**/dota2_old_npc_heroes.txt",
                "**/dota2_old_npc_items.txt",
                "**/dota2_old_npc_shipin.txt",
                "**/dota_old_itemname.txt"
            ],
            "encryptFiles": [
                "**/*.lua",
                "!game/scripts/vscripts/addon_init.lua"
            ],
            "encryptDedicatedServerKey": "Invalid_NotDedicatedServer",
            "version": "1.0.0"
        },
        "dota2MainPath": "D:/Program Files (x86)/Steam/steamapps/common/dota 2 beta"
    },
    "scripts": {
        "postinstall": "node scripts/install.js",
        "mapBuild": "node scripts/mapBuild.js --m bigmap01",
        "launch": "node scripts/launch.js --m bigmap01",
        "updateApp": "node scripts/updateApp.js 2598019781",
        "lua2ts": "node scripts/lua2ts/lua2ts.js",
        "kv2excel": "node scripts/kv_2_excel.js",
        "preprod": "node scripts/prepublish.js",
        "prod": "run-s prod:*",
        "prod:ui": "node --preserve-symlinks node_modules/webpack/bin/webpack.js --config content/panorama/webpack.config.js",
        "prod:ts": "tstl --project game/scripts/tsconfig.json",
        "prod:kv": "node scripts/excel_2_kv.js",
        "prod:createability": "node scripts/createabilityfile.js",
        "prod:soundkv": "node scripts/soundexcel_2_kv.js",
        "prod:kv2ts": "node scripts/kv_2_ts.js",
        "prod:localization": "node scripts/localization.js",
        "publish": "node scripts/publish.js true true",
        "publish_onlylua": "node scripts/publish.js true false",
        "publish_onlyres": "node scripts/publish.js false true",
        "predev": "node scripts/install.js",
        "dev": "run-p dev:*",
        "dev:ui": "node --preserve-symlinks node_modules/webpack/bin/webpack.js --config content/panorama/webpack.config.js --watch",
        "dev:ts": "tstl --project game/scripts/tsconfig.json --watch",
        "dev:kv": "node scripts/excel_2_kv.js --watch",
        "dev:kv2ts": "node scripts/kv_2_ts.js --watch",
        "dev:localization": "node scripts/localization.js --watch"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.5",
        "@moddota/dota-lua-types": "^4.19.0",
        "@moddota/panorama-types": "^1.19.0",
        "@types/react": "^16.14.8",
        "aes-js": "^3.1.2",
        "anymatch": "^3.1.2",
        "babel-loader": "^8.2.1",
        "body-parser": "^1.19.0",
        "chokidar": "^3.5.2",
        "commander": "^6.2.1",
        "crypto-js": "^4.0.0",
        "express": "^4.17.1",
        "fibers": "^5.0.0",
        "file-loader": "^6.2.0",
        "file-match": "^1.0.2",
        "find-steam-app": "^1.0.2",
        "fork-ts-checker-webpack-plugin": "^5.2.1",
        "fs-extra": "^9.1.0",
        "keyvalues-node": "0.0.2",
        "less": "^4.1.1",
        "less-loader": "^10.0.0",
        "node-xlsx": "^0.15.0",
        "npm-run-all": "^4.1.5",
        "react": "^16.14.0",
        "react-panorama-eom": "^0.1.9",
        "rimraf": "^3.0.2",
        "ts-loader": "^8.3.0",
        "typescript": "^4.2.3",
        "typescript-to-lua": "^1.4.4",
        "luamin": "1.0.4",
        "walk": "^2.3.14",
        "webpack": "^5.40.0",
        "webpack-cli": "^4.7.2",
        "@aabao/webpack-panorama": "^0.2.1"
    },
    "prettier": {
        "printWidth": 200,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "arrowParens": "always",
        "proseWrap": "never"
    }
}
